<Page x:Class="datingAppByAJA.ModernGUITest"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:datingAppByAJA"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Height="450" Width="800"
      Title="ModernGUITest" Background="Transparent">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Border CornerRadius="10" Grid.RowSpan="2">
                <Border.Background>
                    <LinearGradientBrush>
                        <GradientStop Color="#7813E9" Offset="0.0"/>
                        <GradientStop Color="#E91348" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
            </Border>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="verheiratetabergeil.de"
                           FontWeight="Light"
                           FontFamily="helvetica"
                           FontSize="22"
                           Foreground="White"
                           HorizontalAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <StackPanel Orientation="Horizontal">
                    <TextBox FontFamily="Helvetica"
                         FontWeight="Light"
                         Text="Username"
                         FontSize="20"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="215"
                         HorizontalContentAlignment="Left"
                         Opacity="0.5" Height="24"
                         Margin="280,0,0,0"/>
                    <iconPacks:PackIconMaterial Kind="Account"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center" Grid.Row="1" Height="25" RenderTransformOrigin="0.556,0.516"/>

                </StackPanel>
                <Border Width="235"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                    <PasswordBox x:Name="PasswortSchrift" FontFamily="Helvetica"
                         FontWeight="Light"
                         Password="Password"
                         FontSize="20"
                         Foreground="White"
                         Background="Transparent"
                         BorderThickness="0"
                         Width="215"
                         HorizontalContentAlignment="Left"
                         Opacity="0.5" Height="24"
                         Margin="280,0,0,0"/>
                    <iconPacks:PackIconMaterial Kind="Lock"
                                 VerticalAlignment="Top"
                                 HorizontalAlignment="Center" Grid.Row="1" Height="25" RenderTransformOrigin="0.556,0.516"/>

                </StackPanel>
                <Border Width="235"
                    Height="2"
                    Background="White"
                    Opacity="0.5"/>

                <StackPanel Orientation="Horizontal" Margin="0,50,0,0">
                    <Button Width="100" Height="40" Content="LOGIN" Margin="270,0,60,0"/>
                    <Button Width="100" Height="40" Content="REGISTER"/>
                </StackPanel>
            </StackPanel>



        </Grid>
    </Grid>
</Page>
