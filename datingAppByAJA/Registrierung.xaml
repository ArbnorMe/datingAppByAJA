<Page x:Class="datingAppByAJA.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:datingAppByAJA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <Grid x:Name="grid" Background="#FF828282">
        <Grid.RowDefinitions>
            <RowDefinition Height="0.3*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110*"></ColumnDefinition>
            <ColumnDefinition Width="590*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="emailEingabe" HorizontalAlignment="Left" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="230" Height="41" Margin="151,116,0,0" Grid.Column="1"/>
        <TextBox Name="passwortEingabe" HorizontalAlignment="Left" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="41" Margin="152,178,0,0" Grid.Column="1"/>
        <Button Content="Registrieren" HorizontalAlignment="Left" Height="41" VerticalAlignment="Top" Width="114" Grid.Column="1" Margin="458,276,0,0" Grid.Row="1" Click="Button_Click_1"/>
        <Label Content="E-Mail" HorizontalAlignment="Left" Margin="0,116,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="0,178,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1"/>
        <Label Content="Passwort wiederholen" HorizontalAlignment="Left" Margin="0,241,0,0" Grid.Row="1" VerticalAlignment="Top" Grid.Column="1"/>
        <Button Content="Bug melden" Grid.Column="2" Margin="0,276,0,0" Grid.Row="1" VerticalAlignment="Top" Height="70" HorizontalAlignment="Right" Width="70"/>
        <TextBox x:Name="passwortEingabeWiederholen" HorizontalAlignment="Left" Grid.Row="1" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="41" Margin="152,241,0,0" Grid.Column="1"/>
    </Grid>
</Page>
