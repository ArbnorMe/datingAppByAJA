<Page x:Class="datingAppByAJA.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:datingAppByAJA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <Grid x:Name="grid" Background="#FF828282">
        <Grid.RowDefinitions>
            <RowDefinition Height="133*"></RowDefinition>
            <RowDefinition Height="92*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="475*"></ColumnDefinition>
            <ColumnDefinition Width="225*"></ColumnDefinition>
            <ColumnDefinition Width="100*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="emailEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Margin="0,142,19,0" HorizontalAlignment="Right" Width="230"/>
        <TextBox Name="passwortEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Margin="0,206,20,0" HorizontalAlignment="Right" Width="229"/>
        <Button Content="Registrieren" HorizontalAlignment="Center" Height="41" VerticalAlignment="Top" Width="114" Grid.Column="1" Margin="0,11,0,0" Click="Button_Click_1" Grid.Row="1"/>
        <Label Content="E-Mail" HorizontalAlignment="Left" Margin="77,150,0,0" VerticalAlignment="Top" Grid.Column="0" Height="26" Width="44"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="77,214,0,0" VerticalAlignment="Top" Grid.Column="0" Height="26" Width="57"/>
        <Label Content="Passwort wiederholen" HorizontalAlignment="Left" Margin="77,278,0,0" VerticalAlignment="Top" Grid.Column="0" Height="26" Width="125"/>
        <Button Content="Bug melden" Grid.Column="2" MinHeight="70" MinWidth="70" Height="70" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="70" Grid.Row="1"/>
        <TextBox x:Name="passwortEingabeWiederholen" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="41" Margin="0,270,20,0" HorizontalAlignment="Right" Width="229"/>
    </Grid>
</Page>
