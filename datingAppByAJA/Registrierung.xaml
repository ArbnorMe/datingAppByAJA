<Page x:Class="datingAppByAJA.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:datingAppByAJA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="42"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="505*"></ColumnDefinition>
            <ColumnDefinition Width="225*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="emailEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Margin="275,0,0,0" HorizontalAlignment="Left" Width="230" Grid.Row="1"/>
        <TextBox Name="passwortEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Height="42" Margin="275,0,0,0" HorizontalAlignment="Left" Width="230" Grid.Row="2"/>
        <TextBox x:Name="passwortEingabeWiederholen" Text="" TextWrapping="Wrap" Margin="275,0,0,0" Grid.Row="3" HorizontalAlignment="Left" Width="230" Height="42" VerticalAlignment="Bottom" Background="White"/>
        <Button Content="Registrieren" HorizontalAlignment="Center" Width="114" Grid.Column="1" Click="Button_Click_1" Grid.Row="3" Margin="0,17,0,1"/>
        <Label Content="E-Mail" HorizontalAlignment="Left" Margin="134,8,0,0" VerticalAlignment="Top" Grid.Column="0" Height="26" Width="44" Grid.Row="1"/>
        <Label Content="Passwort" HorizontalAlignment="Left" Margin="122,3,0,0" VerticalAlignment="Top" Grid.Column="0" Height="26" Width="56" Grid.Row="2"/>
        <Label Content="Passwort wiederholen" HorizontalAlignment="Left" Margin="116,0,0,0" VerticalAlignment="Center" Grid.Column="0" Height="26" Width="124" Grid.Row="3"/>
        <Button Content="Bug melden" Grid.Column="2" MinHeight="70" MinWidth="70" Grid.Row="4" Height="70" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
