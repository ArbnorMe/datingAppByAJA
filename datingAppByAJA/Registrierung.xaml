<Page x:Class="datingAppByAJA.Registrierung"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:datingAppByAJA"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Registrierung">

    <Grid x:Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="42"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>

        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>

            <ColumnDefinition Width="505*"></ColumnDefinition>
            <ColumnDefinition Width="225*"></ColumnDefinition>
            <ColumnDefinition Width="70*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Name="emailEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Height="42" Grid.Row="1" HorizontalAlignment="Right" Width="230"/>
        <TextBox Name="passwortEingabe" Text="" TextWrapping="Wrap" VerticalAlignment="Center" Height="42" Grid.Row="2" HorizontalAlignment="Right" Width="230"/>
        <TextBox x:Name="passwortEingabeWiederholen" Text="" TextWrapping="Wrap" Grid.Row="3" Height="42" VerticalAlignment="Center" Background="White" HorizontalAlignment="Right" Width="230"/>
        <Label Content="E-Mail" HorizontalAlignment="Right" Margin="0,0,330,0" VerticalAlignment="Center" Grid.Column="0" Height="26" Width="44" Grid.Row="1"/>
        <Label Content="Passwort" HorizontalAlignment="Right" Margin="0,0,318,0" VerticalAlignment="Center" Grid.Column="0" Height="26" Width="56" Grid.Row="2"/>
        <Label Content="Passwort wiederholen" HorizontalAlignment="Right" Margin="0,0,250,0" VerticalAlignment="Center" Grid.Column="0" Height="26" Width="124" Grid.Row="3"/>
        <Button Content="Registrieren" HorizontalAlignment="Center" VerticalAlignment="Center" Width="114" Grid.Column="1" Click="Button_Click_1" Grid.Row="3" Margin="0,0,0,0" Height="42"/>
        <Button Content="Bug melden" Grid.Column="2" MinHeight="35" MinWidth="35" Grid.Row="4" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="35"/>
    </Grid>
</Page>
